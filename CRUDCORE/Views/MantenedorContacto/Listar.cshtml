@model List<ContactoModel>//Indicamos que trabajaremos con una lista básada en ContactoModel
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista de contactos
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="MantenedorContacto" class="btn btn-success"><i class="bi bi-person-plus-fill"></i> Crear Nuevo</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Teléfono</th>
                    <th>Correo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model){
                    <tr>
                        <td>@item.nombre</td>
                        <td>@item.telefono</td>
                        <td>@item.correo</td>
                        <td>
                            <a asp-action="Editar" asp-controller="MantenedorContacto" class="btn btn-primary btn-sm" asp-route-contactoID="@item.contactoID"><i class="bi bi-pencil-fill"></i> Editar</a>
                            <a asp-action="Eliminar" asp-controller="MantenedorContacto" class="btn btn-danger btn-sm" asp-route-contactoID="@item.contactoID"><i class="bi bi-trash-fill"></i> Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

